

<h1>Friend List</h1>


<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr class="table-dark">
      <th>Name</th>
      <th>Email</th>
      <th>Mobile</th>
      <th>Twitter</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @friends.each do |friend| %>
      <tr>
        <td><%= friend.first_name %> <%= friend.last_name %></td>
        <td><%= friend.email %></td>
        <td><%= friend.phone %></td>
        <td><%= friend.twitter %></td>
        <td>
          <%= link_to 'Show', friend %>
          <%= link_to 'Edit', edit_friend_path(friend) %>
          <%= link_to 'Destroy', friend, method: :delete %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


<%= link_to "New friend", new_friend_path, class:"btn btn-secondary" %>
