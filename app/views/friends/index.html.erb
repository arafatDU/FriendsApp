<% if user_signed_in? %>

<h1>Friend List</h1>


<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr class="table-dark">
      <th>Name</th>
      <th>Email</th>
      <th>Mobile</th>
      <th>Twitter</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @friends.each do |friend| %>
      <% if friend.user == current_user %>
      <tr>
        <td><%= link_to friend.first_name + ' ' + friend.last_name, friend, class:"link-info link-offset-2 link-underline-opacity-0 link-underline-opacity-100-hover" %></td>
        <td><%= friend.email %></td>
        <td><%= friend.phone %></td>
        <td><%= friend.twitter %></td>
        <td>
          <%= button_to "Destroy", @friend, class:"btn btn-danger btn-sm", method: :delete %>
        </td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>


<%= link_to "New friend", new_friend_path, class:"btn btn-secondary" %>


<% else %>
  <h1>Hello World</h1>
  <p>This is my first Rails webpage</p>
  <h3>Sign in to view your friends</h3>
<% end %>